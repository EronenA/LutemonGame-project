<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLutemonImage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLutemonName"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Lutemonin nimi ja väri"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLutemonAttack"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hyökkäys" />

        <TextView
            android:id="@+id/txtLutemonDefence"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Puolustus" />

        <TextView
            android:id="@+id/txtLutemonHealt"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Elämä" />

        <TextView
            android:id="@+id/txtLutemonExperience"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Kokemus" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgSelectedLutemon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>